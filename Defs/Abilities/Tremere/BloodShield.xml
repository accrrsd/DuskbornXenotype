<Defs>
  <AbilityDef ParentName="PsycastBaseSkip" Name="SMPdb_BloodShield_Base" Abstract="true">
    <label>blood shield</label>
    <description>Creates a spherical ground shield of blood using the power of Hemogenes, the shield
      reflects all incoming and outgoing projectiles at ground level. This process is strong enough
      to detonate explosive shells. People and objects will not be harmed.</description>
    <iconPath>Abilities/BulletShield</iconPath>
    <writeCombatLog>True</writeCombatLog>
    <hotKey>Misc12</hotKey>
    <canUseAoeToGetTargets>False</canUseAoeToGetTargets>
    <statBases>
      <Ability_EffectRadius>4.9</Ability_EffectRadius>
    </statBases>
    <aiCanUse>true</aiCanUse>
    <verbProperties>
      <warmupTime>1.5</warmupTime>
      <range>14.9</range>
      <targetParams>
        <canTargetPawns>false</canTargetPawns>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
  </AbilityDef>

